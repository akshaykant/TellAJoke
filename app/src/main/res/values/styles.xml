<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom Button style -->
    <style name="MyButtonStyle" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/button_textsize</item>
        <item name="android:paddingBottom">@dimen/button_paddingTopBottom</item>
        <item name="android:paddingTop">@dimen/button_paddingTopBottom</item>
        <item name="android:paddingRight">@dimen/button_paddingLeftRight</item>
        <item name="android:paddingLeft">@dimen/button_paddingLeftRight</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
    </style>

</resources>
